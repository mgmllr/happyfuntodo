<div class="span5">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Following</li>
      <% unless @user.followed_users.empty? %>
        <% @user.followed_users.each do |user| %>
          <li><%= link_to user.email, list_path(user) %></li>
        <% end %>
      <% else %>
        <li>None</li>
      <% end %>
      <li class="nav-header">Followers</li>
      <% unless @user.followers.empty? %>
        <% @user.followers.each do |user| %>
          <li><%= link_to user.email %></li>
        <% end %>
      <% else %>
        <li>None</li>
      <% end %>
    </ul>
  </div>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <%= form_tag("/users/:id/follow", :method => "get") do %>
        <li class="nav-header">Invite Followers</li>  
    <!--   <%= label_tag(:invitee, "Invite Followers") %> -->        
        <%= text_field_tag(:invitee) %>
        <%= submit_tag("Submit") %>
      <% end %>
    </ul>
  </div><!--/.well-->
</div><!--/span-->
