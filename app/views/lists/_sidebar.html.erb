<div class="span5">
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <li class="nav-header">Following</li>
      <% unless current_user.followed_users.empty? %>
        <% current_user.followed_users.each do |user| %>
          <li><%= link_to user.email, list_path(user.list) %></li>
        <% end %>
      <% else %>
        <li>None</li>
      <% end %>
      <li class="nav-header">Followers</li>
      <% unless current_user.followers.empty? %>
        <% @user.followers.each do |user| %>
          <li><%= link_to user.email, list_path(user.list) %></li>
        <% end %>
      <% else %>
        <li>None</li>
      <% end %>
    </ul>
  </div>
  <div class="well sidebar-nav">
    <ul class="nav nav-list">
      <%= form_tag(follow_path) do %>
        <li class="nav-header">Invite Followers</li>  
        <%= text_field_tag(:follower) %>
        <%= submit_tag("Submit") %>
      <% end %>
    </ul>
  </div><!--/.well-->
</div><!--/span-->
